@model IEnumerable<Director>

<p>
    @Html.ActionLink("Dodaj", "Create", "Directors")
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var director in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => director.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => director.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => director.LastName)
                </td>
                <td>
                    @Html.ActionLink("Usuń", "Delete", "Directors", routeValues: new { id = director.Id })
                </td>
            </tr>
        }
    </tbody>
</table>