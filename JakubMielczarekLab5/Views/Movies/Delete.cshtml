@model Movie


@using (Html.BeginForm("Delete", "Movies", FormMethod.Post))
{
    <h3>Czy na pewno chcesz usunąć poniższy rekord?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10">
            @{
                var directorName = Model.Director.FirstName + " " + Model.Director.LastName;
                @Html.DisplayFor(name => directorName);
            }
        </dd>
    </dl>

    <input type="submit" value="Usuń" class="btn btn-danger" />
}