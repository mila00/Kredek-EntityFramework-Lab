@model Movie


@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Title)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.YearOfRelease)
        <div class="col-md">
            @Html.TextBoxFor(model => model.YearOfRelease)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DirectorId)
        <div class="col-md">
            @Html.TextBoxFor(model => model.DirectorId)
        </div>
    </div>

    <input type="submit" value="Dodaj film" class="btn btn-primary" />
}